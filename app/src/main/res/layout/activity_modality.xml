<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/custombackground"
    tools:context="com.cannawellness.chris.cwbeta.Modality">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Smoke"
        android:id="@+id/btn_option_smoke"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/roundedlistview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Vaporize"
        android:id="@+id/btn_option_vaporize"
        android:layout_below="@+id/btn_option_smoke"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedlistview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Oral"
        android:id="@+id/btn_option_oral"
        android:layout_below="@+id/btn_option_vaporize"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundedlistview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Modality:"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />
</RelativeLayout>